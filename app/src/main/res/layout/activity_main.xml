<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malavika.currencyconverter.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/dollarinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter dollar amount"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="123dp"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="188dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/dollarinput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/rupeeamount"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dollarinput"
        android:layout_alignRight="@+id/dollarinput"
        android:layout_below="@+id/mybutton"
        android:layout_marginTop="90dp"
        android:text="Rupee Amount"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="299dp" />
</RelativeLayout>
